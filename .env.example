# Database
# IMPORTANT: Replace with your actual PostgreSQL connection string
# Example: postgresql://username:password@localhost:5432/legallens?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/legallens?schema=public"

# Grok AI API Configuration
# CRITICAL: Never commit your actual API key to version control
# Get your key from https://x.ai/ and set it here
GROK_API_KEY="your-grok-api-key-here"
GROK_API_URL="https://api.x.ai/v1"
GROK_MODEL="grok-beta"

# NextAuth Configuration
# CRITICAL: Generate a secure random string for production
# Run: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
